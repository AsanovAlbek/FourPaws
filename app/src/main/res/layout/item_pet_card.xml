<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/petCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:strokeColor="@color/black"
    app:strokeWidth="@dimen/card_stroke_width">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_element_margin_20"
                android:layout_marginTop="@dimen/card_element_margin_20"
                android:layout_marginBottom="@dimen/card_element_margin_20"
                android:src="@drawable/ic_map" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_element_margin_10"
                android:layout_marginTop="@dimen/card_element_margin_10"
                android:orientation="vertical"
                android:padding="@dimen/card_element_margin_10">

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_22"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/city"
                    layout="@layout/item_city" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgGender"
                android:layout_width="@dimen/card_icon_width"
                android:layout_height="@dimen/card_icon_height"
                android:layout_marginEnd="@dimen/margin_4"
                android:src="@drawable/img_male" />

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/card_icon_width"
                android:layout_height="@dimen/card_icon_height"
                android:layout_marginEnd="@dimen/margin_8"
                android:src="@drawable/img_location" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>